<section>
        <div class="container mt-5 p-3">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card border-dark mb-3" style="width: 15rem;height: 25rem">
                        <center><img style="height: 170px; width:170px" class="card-img-top mt-4 " src="/product-images/{{this._id}}.jpg" alt="Card image cap"></center>
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">Rs. {{this.price}}</p>
                            <p class="card-text">{{this.description}}</p>
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Bag</button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>