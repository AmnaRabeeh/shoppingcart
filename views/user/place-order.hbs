<section>
    <div class="container mt-5">
        <form action="" id="checkout-form">
            <div class="row">
                <div class="col-md-6">
                    <h2>Delivery Address</h2><br>
                    <div>
                        <label for="">Full Name</label>
                        <input type="text" class="form-control" name="name" id="name">
                        <label for="">Address</label>
                        <input type="text" class="form-control" name="address" id="address">
                        <label for="">Pincode</label>
                        <input type="text" class="form-control" name="pincode" id="pincode">
                        <label for="">Mobile</label>
                        <input type="text" class="form-control" name="mobile" id="mobile">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="container mt-5 ml-5 checkout">
                        <div class="payment">
                            <h5>Payment Method</h5>
                            <label for="" class="radio-inline">
                                <input type="radio" name="payment-method" value ="COD"  > Cash On Delivery
                            </label><br>
                            <label for="" class="radio-inline">
                                <input type="radio" name="payment-method" value ="Online Payment" > Online Payment
                            </label><br><br>
                            <button class="btn-primary btn">Checkout</button>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</section>